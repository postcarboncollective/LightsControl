@page "/"
@page "/Functions"
@using MudBlazor.Utilities

<PageTitle>Functions</PageTitle>

<center>
    <br/>
    <MudContainer>
        <MudButton OnClick="@(() => ShowBlackoutPanel = !ShowBlackoutPanel)" EndIcon="@(ShowBlackoutPanel ? Icons.Material.Filled.ArrowUpward : Icons.Material.Filled.ArrowDownward)">
            Blackout
        </MudButton>
        @if (ShowBlackoutPanel)
        {
            <MudContainer Style="background: #111f">
                <br/>
                <MudGrid>
                    <MudItem xs="6">
                        <MudSwitch UnCheckedColor="Color.Primary" Color="Color.Secondary" Label="Strobe" LabelPosition="LabelPosition.Start" @bind-Value="@BlackoutStrobe" Style="align-items: center"/>
                    </MudItem>
                    <MudItem xs="6">
                        <MudSwitch UnCheckedColor="Color.Primary" Color="Color.Secondary" Label="Par" LabelPosition="LabelPosition.Start" @bind-Value="@BlackoutPar" Style="align-items: center"/>
                    </MudItem>
                    <MudItem xs="6">
                        <MudSwitch UnCheckedColor="Color.Primary" Color="Color.Secondary" Label="Bar 1" LabelPosition="LabelPosition.Start" @bind-Value="@BlackoutBar1" Style="align-items: center"/>
                    </MudItem>
                    <MudItem xs="6">
                        <MudSwitch UnCheckedColor="Color.Primary" Color="Color.Secondary" Label="Bar 2" LabelPosition="LabelPosition.Start" @bind-Value="@BlackoutBar2" Style="align-items: center"/>
                    </MudItem>
                </MudGrid>
                <br/>
                <MudButton Variant="Variant.Filled" Color="Color.Tertiary" EndIcon="@Icons.Material.Filled.Send" OnClick="Blackout">Execute</MudButton>
                <br/>
                <br/>
            </MudContainer>
        }
    </MudContainer>
    <br/>
    <MudContainer>
        <MudButton OnClick="@(() => ShowExpulsadeiraPanel = !ShowExpulsadeiraPanel)" EndIcon="@(ShowExpulsadeiraPanel ? Icons.Material.Filled.ArrowUpward : Icons.Material.Filled.ArrowDownward)">
            Expulsadeira
        </MudButton>
        @if (ShowExpulsadeiraPanel)
        {
            <MudContainer Style="background: #111f">
                <br/>
                <MudGrid>
                    <MudItem xs="6">
                        <MudSwitch UnCheckedColor="Color.Primary" Color="Color.Secondary" Label="Strobe" LabelPosition="LabelPosition.Start" @bind-Value="@ExpulsadeiraStrobe" Style="align-items: center"/>
                    </MudItem>
                    <MudItem xs="6">
                        <MudSwitch UnCheckedColor="Color.Primary" Color="Color.Secondary" Label="Par" LabelPosition="LabelPosition.Start" @bind-Value="@ExpulsadeiraPar" Style="align-items: center"/>
                    </MudItem>
                    <MudItem xs="6">
                        <MudSwitch UnCheckedColor="Color.Primary" Color="Color.Secondary" Label="Bar 1" LabelPosition="LabelPosition.Start" @bind-Value="@ExpulsadeiraBar1" Style="align-items: center"/>
                    </MudItem>
                    <MudItem xs="6">
                        <MudSwitch UnCheckedColor="Color.Primary" Color="Color.Secondary" Label="Bar 2" LabelPosition="LabelPosition.Start" @bind-Value="@ExpulsadeiraBar2" Style="align-items: center"/>
                    </MudItem>
                    <MudItem xs="12" Class="d-flex justify-center">
                        <MudColorPicker @bind-Value="ExpulsadeiraColor" DisableToolbar="@true" DisableAlpha="@true" DisableColorField="@false" DisablePreview="@false" DisableSliders="@false" DisableInputs="@true" DisableModeSwitch="@true" ColorPickerMode="ColorPickerMode.RGB" PickerVariant="PickerVariant.Static"/>
                    </MudItem>
                </MudGrid>
                <br/>
                <MudButton Variant="Variant.Filled" Color="Color.Tertiary" EndIcon="@Icons.Material.Filled.Send" OnClick="Expulsadeira">Execute</MudButton>
                <br/>
                <br/>
            </MudContainer>
        }
    </MudContainer>
</center>

@code {
    public bool ShowBlackoutPanel = false;
    public bool BlackoutStrobe { get; set; } = true;
    public bool BlackoutPar { get; set; } = true;
    public bool BlackoutBar1 { get; set; } = true;
    public bool BlackoutBar2 { get; set; } = true;
    public bool ShowExpulsadeiraPanel = false;
    public bool ExpulsadeiraStrobe { get; set; } = true;
    public bool ExpulsadeiraPar { get; set; } = true;
    public bool ExpulsadeiraBar1 { get; set; } = true;
    public bool ExpulsadeiraBar2 { get; set; } = true;
    public MudColor ExpulsadeiraColor = new MudColor(255, 255, 255, 255);
}