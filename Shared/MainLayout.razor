@using Page = LightsControl.Page
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MudThemeProvider Theme="PlanetaManas"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudSpacer/>
        @if (Global.Page == Page.Functions)
        {
            <MudButton Color="Color.Secondary" OnClick="@(() => NavigationManager.NavigateTo("/Functions"))">Functions</MudButton>
        }
        else
        {
            <MudButton OnClick="@(() => NavigationManager.NavigateTo("/Functions"))">Functions</MudButton>
        }
        @if (Global.Page == Page.Advanced)
        {
            <MudButton Color="Color.Secondary" OnClick="@(() => NavigationManager.NavigateTo("/Advanced"))">Advanced</MudButton>
        }
        else
        {
            <MudButton OnClick="@(() => NavigationManager.NavigateTo("/Advanced"))">Advanced</MudButton>
        }
        <MudSpacer/>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Global.MainLayout = this;
    }

    public void Refresh()
    {
        StateHasChanged();
    }

    MudTheme PlanetaManas = new()
    {
        LayoutProperties = new LayoutProperties()
        {
            AppbarHeight = "30px"
        },
        Palette = new Palette()
        {
            Background = "000f",
            BackgroundGrey = "000f",
            Primary = "#ffff",
            Secondary = "#0f0f",
            Tertiary = "#777f",
            TextPrimary = "ffff",
            TextSecondary = "0f0f",
            AppbarBackground = "000f",
            DrawerBackground = "222f"
        }
    };

}

@*

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        My Application
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}

*@